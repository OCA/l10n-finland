<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_account_config_settings_finnish" model="ir.ui.view">
            <field name="name">Finnish Account Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='module_account_budget']/../.." position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">

                            <label string="Auto Reconciliation Method"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="text-muted">
                                Choose the auto reconciliation method
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="auto_reconcile_method" class="col-md-3 o_light_label"/>
                                    <field name="auto_reconcile_method"/>
                                </div>
                            </div>

                        </div>
                    </div>
                </xpath>
            </field>
        </record>

</odoo>